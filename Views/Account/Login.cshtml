@model LoginDTO
@{
    Layout = "";
}
<link rel="stylesheet" href="/css/LoginCSS/LoginCSS.css?v=1" />


<div class="login-container">
    <div class="login-card">
        <h2>Welcome Back 👋</h2>
        <p class="subtitle">Login to continue to your CRM</p>

        <form asp-controller="Account" asp-action="Login" asp-route-ReturnURL="@Context.Request.Query["ReturnUrl"]" method="post">

            <div class="input-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="input-group">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="extras">
                <label class="remember">
                    <input type="checkbox" />
                    Remember me
                </label>

                <a href="/Account/ForgotPassword" class="forgot">Forgot Password?</a>
            </div>

            <button class="btn-login" type="submit">Login</button>
        </form>
    </div>
</div>
