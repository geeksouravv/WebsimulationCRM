@model RegisterDTO

<link rel="stylesheet" href="~/css/Register/Register.css" />

<div class="form-wrapper">

    <div class="form-card">
        <h2>Add New Employee</h2>
        <p class="subtitle">Fill the details to create a new employee account</p>

        <form asp-controller="Account" asp-action="Register" method="post">

            <div class="grid-2">

                <div class="input-box">
                    <label asp-for="UserName"></label>
                    <input asp-for="UserName" placeholder="Enter username" />
                    <span asp-validation-for="UserName" class="error"></span>
                </div>

                <div class="input-box">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" placeholder="Enter email" />
                    <span asp-validation-for="Email" class="error"></span>
                </div>

                <div class="input-box">
                    <label asp-for="PhoneNumber"></label>
                    <input asp-for="PhoneNumber" placeholder="Enter phone number" />
                    <span asp-validation-for="PhoneNumber" class="error"></span>
                </div>

                <div class="input-box">
                    <label asp-for="Role"></label>
                    <select asp-for="Role">
                        <option value="">-- Select Role --</option>
                        <option>Admin</option>
                        <option>Manager</option>
                        <option>Sales Executive</option>
                    </select>
                    <span asp-validation-for="Role" class="error"></span>
                </div>

                <div class="input-box">
                    <label asp-for="TeamName"></label>
                    <select asp-for="TeamName">
                        <option value="">-- Select Team --</option>
                        <option>Alpha</option>
                        <option>Beta</option>
                        <option>Delta</option>
                        <option>Omega</option>
                    </select>
                    <span asp-validation-for="TeamName" class="error"></span>
                </div>

                <div class="input-box">
                    <label asp-for="MangerID"></label>
                    <input asp-for="MangerID" placeholder="Enter Manager ID (optional)" />
                    <span asp-validation-for="MangerID" class="error"></span>
                </div>

                <div class="input-box">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" type="password" placeholder="Enter password" />
                    <span asp-validation-for="Password" class="error"></span>
                </div>

                <div class="input-box">
                    <label asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword" type="password" placeholder="Confirm password" />
                    <span asp-validation-for="ConfirmPassword" class="error"></span>
                </div>
            </div>

            <div class="check-row">
                <label class="check">
                    <input asp-for="isActive" />
                    <span>Active Employee</span>
                </label>
            </div>

            <input type="hidden" asp-for="createdAt" value="@DateTime.Now" />

            <button class="btn-submit" type="submit">Save Employee</button>
        </form>
    </div>
</div>
