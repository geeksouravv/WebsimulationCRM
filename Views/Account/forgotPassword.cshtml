@model ForgetPasswordDTO
@{
    Layout = "";
}
<link href="~/css/ForgetPassword/ForgetPassword.css" rel="stylesheet" />

<div class="forgot-container">
    <div class="forgot-card">

        <h2>Forgot Password 🔒</h2>
        <p class="subtitle">No worries! Enter your email and we’ll send you a reset link.</p>

        <form asp-controller="Account" asp-action="forgotPassword" method="post">

            <div class="input-group">
                <label asp-for="Email">Email Address</label>
                <input asp-for="Email" placeholder="Enter your registered email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-reset">Send Reset Link</button>

            <div class="back-login">
                <a href="/Account/Login">⬅ Back to Login</a>
            </div>

        </form>

    </div>
</div>
